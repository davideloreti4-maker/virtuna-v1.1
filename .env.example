# ============================================================================
# Virtuna Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in the values.
# All NEXT_PUBLIC_ vars are exposed to the browser — never put secrets there.
# ============================================================================

# --- Supabase ---

NEXT_PUBLIC_SUPABASE_URL=       # Project URL from supabase.com/dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_ANON_KEY=  # Anon/public key from the same page
SUPABASE_SERVICE_ROLE_KEY=      # Service role key (secret — never expose client-side)

# --- App URL ---

NEXT_PUBLIC_APP_URL=            # Production URL (e.g. https://your-app.vercel.app)
                                # Used for Apify webhook callbacks and referral links

# --- Vercel Cron Authentication ---

CRON_SECRET=                    # Random 16+ char string — Vercel sends as Authorization: Bearer header
                                # All 7 cron routes verify this token via verifyCronAuth()

# --- Apify (TikTok Scraping) ---

APIFY_TOKEN=                    # API token from console.apify.com > Account > Integrations
APIFY_WEBHOOK_SECRET=           # Shared secret for webhook payload verification (you generate this)
APIFY_ACTOR_ID=                 # (optional) Actor ID — default: clockworks~tiktok-scraper
SCRAPER_HASHTAGS=               # (optional) Comma-separated hashtags to scrape
                                # Default: trending,viral,fyp,comedy,dance,cooking,fitness,fashion,beauty,tech,education,storytelling,lifehack,motivation

# --- AI / LLM ---

GEMINI_API_KEY=                 # Google AI Studio > API keys (aistudio.google.com)
GEMINI_MODEL=                   # (optional) Gemini model ID — default: gemini-2.5-flash
DEEPSEEK_API_KEY=               # DeepSeek platform > API keys (platform.deepseek.com)
DEEPSEEK_MODEL=                 # (optional) DeepSeek model ID — default: deepseek-reasoner

# --- Whop (Payments & Subscriptions) ---

WHOP_API_KEY=                   # Whop dashboard > Developer settings > API key
WHOP_WEBHOOK_SECRET=            # Webhook signing secret from Whop dashboard
WHOP_PRODUCT_ID_STARTER=        # Product ID for the Starter tier plan
WHOP_PRODUCT_ID_PRO=            # Product ID for the Pro tier plan

# --- Sentry (Error Tracking) ---

NEXT_PUBLIC_SENTRY_DSN=         # Sentry DSN from project settings (required for error tracking)
SENTRY_ORG=                     # Sentry org slug (optional, for source map upload)
SENTRY_PROJECT=                 # Sentry project slug (optional, for source map upload)
